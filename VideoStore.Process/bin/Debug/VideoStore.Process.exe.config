      </endpoint>
      <endpoint address="net.tcp://localhost:9040/EmailService" binding="netTcpBinding" bindingConfiguration="NetTcpBinding_IEmailService" contract="EmailService.IEmailService" name="NetTcpBinding_IEmailService">
